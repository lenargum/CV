---
import Layout from "../layouts/Layout.astro";
import CVContent from "../components/CVContent.tsx";

// Import translations (will be used client-side)
import "../i18n/index.js";

// Import data from data files
import { 
  personalInfo, 
  languages, 
  experiences, 
  education, 
  achievements,
  generateTags,
  summary
} from "../data";

// Generate tags
const allTags = generateTags();
---

<Layout title="Lenar Gumerov - CV">
  <CVContent
      client:load
      {personalInfo}
      {summary}
      {languages}
      {experiences}
      {education}
      {achievements}
      {allTags}
    />
  
</Layout>